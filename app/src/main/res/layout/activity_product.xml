<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product"
    android:background="@color/white">

   <TextView
       android:id="@+id/bandage"
       android:layout_width="match_parent"
       android:layout_height="70dp"
       android:background="#FFF"
       android:elevation="10dp"
       android:gravity="center"
       android:text="Floating Phone"
       android:textColor="#253DA1"
       android:textSize="25sp"
       android:textStyle="bold"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <ImageView
       android:id="@+id/cart"
       android:layout_width="38dp"
       android:layout_height="38dp"
       android:layout_margin="16dp"
       android:elevation="10dp"
       android:src="@drawable/baseline_shopping_cart_24"
       app:layout_constraintBottom_toBottomOf="@+id/bandage"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:padding="5dp"
       />

   <ImageView
       android:id="@+id/arrow"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:elevation="10dp"
       android:src="@drawable/baseline_arrow_back_24"
       tools:layout_editor_absoluteX="303dp"
       tools:layout_editor_absoluteY="16dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="16dp"
       android:layout_marginRight="15dp"
       />

   <ImageView
       android:id="@+id/img_main"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:src="@drawable/pic1"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/bandage"
       android:layout_marginTop="10dp"
   />

   <ImageView
       android:id="@+id/img_small"
       android:layout_width="50dp"
       android:layout_height="70dp"
       android:gravity="left"
       android:src="@drawable/pic1"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/img_main"
       android:layout_marginTop="20dp"
       android:layout_marginLeft="30dp"

      />
   <TextView
       android:id="@+id/name"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="rough notebook"
       app:layout_constraintTop_toBottomOf="@id/img_small"
       android:gravity="left"
       app:layout_constraintStart_toStartOf="parent"
       android:textSize="15sp"
       android:layout_marginLeft="16dp"
       android:layout_marginTop="21dp"
       android:textColor="@color/black"
/>
   
   <TextView
       android:id="@+id/price"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="$100"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/name"
       android:layout_marginLeft="16dp"
       android:textColor="@color/black"
       android:textSize="20sp"
       android:textStyle="bold"
       android:layout_marginTop="3dp"
      />
   <TextView
       android:id="@+id/desc"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:text="rough notebook with 100 pages"
       android:textColor="@color/black"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/price"
       android:textSize="15sp"
       android:layout_margin="16dp"
      />
   <TextView
       android:id="@+id/addToCartBtnInside"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/round_btn"
       android:text="Add To Cart"
       app:layout_constraintTop_toBottomOf="@id/desc"
       android:textColor="@color/white"
       android:padding="13dp"
       app:layout_constraintStart_toStartOf="@id/desc"
       android:layout_marginTop="16dp"
      />
</androidx.constraintlayout.widget.ConstraintLayout>